---
const { socials } = Astro.props as { socials?: Record<string, string> };

const labels: Record<string, string> = {
  website: "Website",
  github: "GitHub",
  twitter: "Twitter",
  x: "X",
  telegram: "Telegram",
  linkedin: "LinkedIn",
};

const preferredOrder = ["website", "github", "twitter", "x", "telegram", "linkedin"];

const orderedKeys = [
  ...preferredOrder.filter((key) => socials?.[key]),
  ...Object.keys(socials ?? {}).filter((key) => !preferredOrder.includes(key)),
];

const items = orderedKeys.map((key) => ({
  label: labels[key] ?? key.charAt(0).toUpperCase() + key.slice(1),
  href: socials![key],
}));
---

{items.length ? (
  <aside class="socials" aria-label="Social links">
    <h2>Socials</h2>
    <ul>
      {items.map((item) => (
        <li>
          <a href={item.href} rel="me noopener noreferrer" target="_blank">
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </aside>
) : null}

<style>
  .socials {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.12);
  }

  h2 {
    margin: 0 0 0.5rem;
    font-size: 0.95rem;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem 1rem;
  }

  a {
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }
</style>
